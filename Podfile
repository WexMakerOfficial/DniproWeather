use_frameworks!

target 'DniproWeather' do
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'SwiftyJSON'
    pod 'Charts'
    pod 'RealmSwift'
end

# RxTest and RxBlocking make the most sense in the context of unit/integration tests
target 'DniproWeatherTests' do
    pod 'RxBlocking'
    pod 'RxTest'
end

# ignore all warnings from all pods
inhibit_all_warnings!
